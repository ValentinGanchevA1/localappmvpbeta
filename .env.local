// src/config/environment.ts - REVISED
import { Platform } from 'react-native';

const BASE_URLS = {
  development: {
    android: 'http://10.0.2.2:3001', // Android emulator
    ios: 'http://localhost:3001',    // iOS simulator
    web: 'http://localhost:3001'
  },
  staging: 'https://staging-api.example.com',
  production: 'https://api.example.com'
};

export const AppEnvironment = {
  API_BASE_URL: __DEV__
    ? (Platform.OS === 'android'
      ? BASE_URLS.development.android
      : BASE_URLS.development.ios)
    : BASE_URLS.production,
  SOCKET_URL: __DEV__
    ? BASE_URLS.development[Platform.OS === 'web' ? 'web' : Platform.OS]
    : 'https://api.example.com',
  API_TIMEOUT: 15000,
  ENABLE_LOGGING: __DEV__,
};
